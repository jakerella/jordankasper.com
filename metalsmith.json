{
  "source": "content",
  "destination": "build",
  "metadata": {
    "title": "Jordan Kasper",
    "description": "So long and thanks for all the fish.",
    "url": "https://jordankasper.com"
  },
  "plugins": {
    "metalsmith-markdown": {},
    "metalsmith-layouts": {
      "directory": "layouts",
      "default": "default.hbs"
    },
    "metalsmith-collections": {
      "posts": {
        "pattern": "content/posts/*.md",
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-permalinks": {
      "pattern": ":title",
      "linksets": [{
          "match": { "collection": "posts" },
          "pattern": ":title"
      }]
    }
  }
}
