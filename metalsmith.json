{
  "source": "content",
  "destination": "build",
  "metadata": {
    "site": "Jordan Kasper",
    "description": "So long and thanks for all the fish.",
    "url": "https://jordankasper.com"
  },
  "plugins": {
    "metalsmith-debug": {},
    "metalsmith-collections": {
      "posts": {
        "pattern": "content/posts/*.md",
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-markdown": {},
    "metalsmith-better-excerpts": {
      "stripTags": true,
      "pruneLength": 500
    },
    "metalsmith-permalinks": {
      "pattern": ":title",
      "linksets": [{
          "match": { "collection": "posts" },
          "pattern": ":title"
      }]
    },
    "metalsmith-tags": {
      "handle": "tags",
      "path": "tag/:tag/index.html",
      "layout": "tag.hbs",
      "sortBy": "date",
      "reverse": true
    },
    "metalsmith-sass": {
      "files": ["./sass/main.scss"],
      "outputDir": "css/",
      "outputStyle": "compact"
    },
    "metalsmith-date-formatter": {
      "dates": [
        {
            "key": "date",
            "format": "MMMM D, YYYY"
        }
      ]
    },

    "metalsmith-discover-partials": {
      "directory": "layouts/partials"
    },
    "metalsmith-layouts": {
      "directory": "layouts",
      "default": "post.hbs"
    },
    "metalsmith-assets": {
      "source": "./assets",
      "destination": "./"
    }
  }
}
