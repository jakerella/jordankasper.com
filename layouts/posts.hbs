<!DOCTYPE html>
<html lang='en'>
    <head>
        {{> head }}
    </head>

    <body class='off-canvas-contain'>
        {{> header }}

        <section class='main-body row'>
            <section class='main-content recent-posts sm-12 md-9'>
                <a href='/rss' class='rss'><i class='icon-rss-squared'></i></a>

                {{#each posts}}
                    <article>
                        <h3><a href='/{{ path }}'>{{ title }}</a></h3>
                        <p>{{ path }} ({{ date }})</p>
                    </article>
                {{/each}}
            </section>

            {{> sidebar }}

            <nav class='paging'>

            </nav>
        </section>

        {{> footer }}

        {{> scripts }}
    </body>
</html>
