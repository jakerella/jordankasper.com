<!DOCTYPE html>
<html lang='en'>
    <head>
        {{> head windowsubtitle=title }}
    </head>

    <body class='off-canvas-contain'>
        {{> header }}

        <section class='main-body row'>
            <article class='main-content blog-post sm-12 md-9'>

                <h2 id='{{ path }}'>{{ title }}</h2>

                {{{ contents }}}

                <p class='publish-time'>
                    <i class='icon-calendar'></i>Published on <date>{{ date }}</date>
                </p>
                <p class='post-tags'>
                    Tagged with
                    <span class='tag-list'>
                        {{#each tags as |tag i|}}{{#if i}}, {{/if}}<a href='/tag/{{ tag.slug }}'>{{ tag.name }}</a>{{/each}}
                    </span>
                </p>

                <aside class='sharing'>
                    <p>
                        Share the love:
                        <a href='https://twitter.com/home?status=Check%20out%20this%20post%20by%20@jakerella:%20{{ title }}%20https://jordankasper.com/{{ path }}' target='_blank'>
                            <i class='icon-twitter'></i>
                        </a>
                        <a href='https://www.linkedin.com/shareArticle?mini=true&title=Blog%20post%20by%20Jordan%20Kasper:%20{{ title }}&summary=&source=&url=https://jordankasper.com/{{ path }}' target='_blank'>
                            <i class='icon-linkedin'></i>
                        </a>
                        <a href='https://www.facebook.com/sharer/sharer.php?u=https://jordankasper.com/{{ path }}' target='_blank'>
                            <i class='icon-facebook-squared'></i>
                        </a>
                        <a href='/rss'>
                            <i class='icon-rss-squared'></i>
                        </a>
                    </p>
                </aside>

                <section id='disqus_thread'></section>
                <noscript>
                    <p>Please enable JavaScript to view and post comments.</p>
                </noscript>

            </article>

            {{> sidebar}}
        </section>

        {{> footer }}

        <script src='//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
        <script src='//cdn.rawgit.com/trevanhetzel/barekit/master/js/barekit.min.js'></script>
        <script src='/js/jk.js'></script>

        <script>
        // Disqus config & startup
        (function() {
            if (!/localhost/.test(location.hostname)) {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//jordankasper.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            }
        })();
        </script>
    </body>
</html>
